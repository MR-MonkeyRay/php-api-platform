# Application
APP_NAME=php-api-platform
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080
TZ=UTC

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=debug
LOG_JSON=true

# Database
# SQLite (default)
DB_CONNECTION=sqlite
DB_PATH=var/database/app.sqlite
DB_CHARSET=utf8mb4

# MySQL / PostgreSQL (set DB_CONNECTION=mysql|pgsql when needed)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=app
DB_USER=app
DB_PASSWORD=app

# Docker Compose
COMPOSE_PROJECT_NAME=php_api_platform
