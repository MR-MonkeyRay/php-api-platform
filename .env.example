# Application
APP_NAME=php-api-platform
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080
TZ=UTC

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=debug
LOG_JSON=true

# Database
# SQLite (default)
DB_CONNECTION=sqlite
DB_PATH=var/database/app.sqlite
DB_CHARSET=utf8mb4

# Admin Security
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2y$12$replace-with-bcrypt-hash
ADMIN_AUDIT_LOG_FILE=var/audit/admin.log

# API Key Security
API_KEY_PEPPER=change-this-to-a-strong-secret
API_KEY_CACHE_TTL=30
API_KEY_VERSION_FILE=var/apikey.version

# Policy Snapshot
POLICY_DIR=var/policy

# MySQL / PostgreSQL (set DB_CONNECTION=mysql|pgsql when needed)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=app
DB_USER=app
DB_PASSWORD=app

# Docker Compose
COMPOSE_PROJECT_NAME=php_api_platform
